<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="CSS" injector-id="xml">
      <display-name>img/@style</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("style")).withParent(xmlTag().withLocalName(string().equalTo("img")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
    <injection language="HTML" injector-id="xml">
      <display-name>img/@style</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("style")).withParent(xmlTag().withLocalName(string().equalTo("img")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>